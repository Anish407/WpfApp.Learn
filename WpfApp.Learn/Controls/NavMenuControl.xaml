<UserControl x:Class="WpfApp.Learn.Controls.NavMenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp.Learn.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Height="Auto" Background="#F05A28">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" VerticalAlignment="Center">
            <Image Source="/Images/logo.png" Width="100"/>
        </StackPanel>
        <StackPanel Margin="10" Grid.Column="1" VerticalAlignment="Center">
            <TextBlock Text="Customers App" FontSize="30" 
Foreground="White"/>
        </StackPanel>
        <StackPanel Margin="10" Grid.Column="2" VerticalAlignment="Center">
            <TextBlock Text="Version 1.0" FontSize="16"
Foreground="#333333"/>
        </StackPanel>
    </Grid>
</UserControl>
